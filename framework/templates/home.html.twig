{% extends "layout.html.twig" %}

{% block title %}
	Home page
{% endblock %}

{% block css %}
    {{ parent() }}  
    <link rel="stylesheet" type="text/css" href="assets/style/buttonCreateGame.css">
{% endblock %}

{% block content %}
	<main>
		<input id="numberOfUsers"  value="{{ usersNumber }}" readonly/>
		<h1>Bienvenue sur la page d'accueil</h1>

		{% if  not user %}
			<p>Veuillez vous connecter ou vous inscrire pour démarrer une partie</p>
		{% else %}
		<div style="display: inline-flex" id="containerForm">
			<form method="POST" name="formulaire">
				<div class="mb-3">
					<label for="exampleInputEmail1" class="form-label">Username</label>
					<input type="text" class="form-control textAligneCenter" aria-describedby="emailHelp" value="{{ user }}" name="username" maxlength="100" required>

					<div class="invalid-feedback" style="display: block">{{username}}</div>
				</div>
					<select id="listOfColors" name="listOfColors" data-dropdown-auto="true">
						<option value="" selected="selected">-- Select Color --</option>
						{% for color in colors%}
							<option class="dropdown-item" value="{{ color }}" style="background-color: {{ color }}"></option>
						{% endfor %}
					</select>


				<input type="submit" value="Submit" />
			</form>
			<p >You have choosen this color:<i style="background-color: {{ player }};width: 3em;">{{ player }}</i></p>
		</div>
			<button class="glow-on-hover" type="button">Créer une partie</button>
		{% endif %}
	</main>

        
    {# Modal Connexion #}
	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Connexion</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<form method="post">
						<div class="mb-3">
							<label class="form-label">Username</label>
							<input type="text" class="form-control " name="username">
						</div>
						<div class="mb-3">
							<label class="form-label">Mot de passe</label>
							<input type="password" class="form-control" name="password">
						</div>
						<div class="mb-3 form-check">
							<input type="checkbox" class="form-check-input" id="exampleCheck1" name="checkbox">
							<label class="form-check-label" for="exampleCheck1">Rester connecté</label>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Fermer</button>
							<button type="submit" class="btn btn-outline-info" name="connect">Connexion</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	{% if user %}
		<h2>Player one is <b>{{ user }}</b></h2><br/>
	{% endif %}
	<div id="main">
		<div id="container">
		</div>
	</div>
{% endblock %}


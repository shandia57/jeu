    <link rel="stylesheet" type="text/css" href="assets/style/buttonCreateGame.css">
    <link rel="stylesheet" type="text/css" href="assets/style/game.css">

</head>
<body>

	<main>

		<h1>Que le meilleur gagne ! </h1>

        <div class="container">
            <div class="justify-content-md-center">
                <div class="input-group mb-3">
                    <input type="text" id="searchbar" class="form-control" placeholder="Level question">
                    <button class="btn btn-outline-secondary" type="button" id="buttonSearch"><i
                            class="fas fa-search"></i></button>
                </div>
            
            <div class="containerModals">
                <div class="modalQuestions">
                    <div class="headerModal">
                        <h2 id="questionGame">Question</h2>
                    </div>                    
                    <div class="bodyModal">
                            <div id="containerModal" ></div>
                    </div>
                    <div class="footerModal">
                        <div class="left">
                            <p><b>Joueur :</b> <label id="currentPlayer"></label></p>
                        </div>
                        <div class="right">
                        <p><b>Score :</b> <label id="currentPlayerScore"></label></p></div>
                    </div>
                </div>


                <div class="modalConsole">
                    <div class="headerModalConsole">
                        <h2>Console<h2>
                    </div>
                    <div class="contentModal">
                        <ul id="listOutput"></ul>
                    </div>
                </div>
            </div>


 
            </div>
 

        </div>



	</main>

	<script type="module" src="assets/script/modules/Game/game.js"></script>

</body>
